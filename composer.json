{
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "source",
        "sort-packages": true,
        "vendor-dir": "vendor"
    },
    "require": {
        "php": "^7.2.5",
        "cweagans/composer-patches": "1.*",
        "phpmailer/phpmailer": "6.*",
        "twig/twig": "1.40.1"
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches-file": "composer.patches.json"
    }
}
