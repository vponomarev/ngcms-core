<div align="center">
	<div class="permBlock" style="width: 450px; margin-right: 10px; margin-bottom: 10px; background: #fff;">
		<div class="permHead">{title} ( {id} )</div>
		<table width="100%" border="0">
			<tr>
				<td><input type="radio" name="template" value="{name}" {checked}/></td>
				<td width="230">
					<a target="_blank" href="{templateURL}/{name}/{image}"><img border=0 src="{templateURL}/{name}/{imagepreview}"/></a>
				</td>
				<td valign="top" style="padding-top:15px; font-size:11px;"><br/>
					<b>{l_template.author}:</b>&nbsp; &nbsp; <u>{author}</u><br/>
					<b>{l_template.version}:</b>&nbsp; &nbsp;{version}<br/>
					<b>{l_template.reldate}:</b>&nbsp; {reldate}
				</td>
			</tr>
		</table>
	</div>
</div>
</div>